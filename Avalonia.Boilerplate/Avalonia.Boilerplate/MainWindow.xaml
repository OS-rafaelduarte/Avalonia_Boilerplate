<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.Boilerplate.MainWindow"
        Title="Avalonia.Boilerplate"
		ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaToDecorationsHint="True"
		Padding="1">
	<DockPanel>
        <Button Name="showCustomTooltip">Hover me to see custom tooltip window!</Button>
        <Button Name="showAnotherCustomTooltip">Hover me to see another custom tooltip window!</Button>

        <TabControl Name="tabControl">
			<Label>Welcome to Avalonia!</Label>
		</TabControl>
	</DockPanel>
	
</Window>