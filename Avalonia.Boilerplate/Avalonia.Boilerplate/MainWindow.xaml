<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.Boilerplate.MainWindow"
        Title="Avalonia.Boilerplate"
		ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaToDecorationsHint="True"
		Padding="1">
	<NativeMenu.Menu>
		<NativeMenu>
			<NativeMenuItem Header="File">
				<NativeMenuItem.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Open Dialog" Clicked="OnOpenDialogNativeMenuItemClick" />
					</NativeMenu>
				</NativeMenuItem.Menu>
			</NativeMenuItem>
		</NativeMenu>
	</NativeMenu.Menu>

	<DockPanel>
		<Menu Name="mainMenu" DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open Dialog" Click="OnOpenDialogMenuItemClick" />
			</MenuItem>
		</Menu>

		<TabControl Name="tabControl">
			<Label>Welcome to Avalonia!</Label>
		</TabControl>
	</DockPanel>
	
</Window>
